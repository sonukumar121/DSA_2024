#include<stdio.h>
#include<stdlib.h>

struct node

{
  int data;
  struct node *next;	
	
}*start=NULL;

void binsert()
{
    struct node *tmp;
	tmp=(struct node*)malloc(sizeof(struct node));
	tmp->next=NULL;
	
	printf("\nenter the data= ");
	scanf("%d",&tmp->data);
	tmp->next=start; //NUll
	start=tmp; //Start=100
	printf("\n elements inserted at first node");
}

void cslinkedlist()
{
	struct node *tmp;
	tmp=start;
	while(tmp->next!=NULL)
	{
		tmp=tmp->next;
	}
	tmp->next=start;
}

void display()
{
	struct node *tmp;
	tmp=start;
	if(tmp==NULL)
	{
		printf("empty");
	}
	else
	while(tmp!=NULL)
	{
		printf(" %d,",tmp->data);
		tmp=tmp->next;
	}
	
}


int main()
{
	int choice;
	
	 while(1)
	{
	printf("\n1>create linked list\n2>create circular linked list\n3>display linked list elements\n4>Exit\n");
	printf("\nenter your choice= ");
	scanf("%d",&choice);
	  if(choice==1)
	  {
	  	binsert();
      }   
	  else if(choice==2)
	  {
	  	cslinkedlist();
	  }  
	  else if(choice==3)
	  {
	  	display();
	  }
	  else
	  printf("\nInvalid choide");
	}
	return 0;
}
