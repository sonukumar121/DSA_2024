#include<stdio.h>
#include<stdlib.h>
struct node
{
    int data;
    struct node *next;
    
}*start=NULL;

void createcllc()
{
    choice:
    	int cho;
    struct node *newnode,*tmp;
    newnode=(struct node*)malloc(sizeof(struct node));
    
    printf("\nEnter the data= ");
    scanf("%d",&newnode->data);
   newnode->next=0;
    if(start=NULL)
    {
        start=newnode;
        tmp=newnode;
    }
    else
    {
        tmp->next=newnode;
        tmp=newnode;
    }
    tmp->next=start;
    printf("\nvalue of data of 1st node= %d",tmp->next->data);
    printf("\n1 for continue 0 for exit");
    scanf("%d",&cho);
    if(cho==1)
    {
     goto choice;   
    }
    else if(cho==0)
    {
        exit(1);
    }
   
    
    
    
}
int main()
{
  int ch;
  while(1)
  { 
  printf("\n1>create cllc");
  printf("\nEnter the choice= ");
  scanf("%d",&ch); 
  switch(ch)
  {
      case 1:createcllc();
	  break;  
  }
  
  
  }
}
