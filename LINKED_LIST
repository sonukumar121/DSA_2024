#include<stdio.h>
#include<stdlib.h>

struct node
{
	int data;
	struct node *next;
}*start=NULL;

void create()
{
 node *tmp,*tmp1;
 tmp=(struct node*)malloc(sizeof(struct node));
 tmp->next=NULL;
 printf("enter the data= ");
 scanf("%d",&tmp->data);
 if(start==NULL)
 {
   start=tmp;	
 }	
 else
  tmp1=start;
  while(tmp1->next!=NULL)
   tmp1=tmp1->next;
   
   tmp1->next=tmp;
}



void display()
{
	node *tmp;
	tmp=start;
	if(tmp==NULL)
	{
		printf("empty");
	}
	else
	while(tmp!=NULL)
	{
		printf("%d",tmp->data);
		tmp=tmp->next;
	}
	
}


void insert()

{
	struct node *tmp;
	tmp=(struct node*)malloc(sizeof(struct node));
	tmp->next=NULL;
	
	printf("enter the data= ");
	scanf("%d",&tmp->data);
	tmp->next=start;
	start=tmp;
	printf("\n elements inserted at first node");
	
}

int main()

{
	int choice;
	while(1)
	{
    printf("\n 1->create list\n 2->display list\n  3->Insert item at the beginning\n 4->exit\n");
    scanf("%d",&choice);
	{
		if(choice==1)
		{
		  create();	
		}
		else if(choice==2)
		{
			display();
		}
		else if(choice==3)
		{
		   insert();	
		}
		else if(choice==4)
		{
			break;
		}
		else
		printf("\n Invalid choice");
		
	}
}
}
